---
import type { translations } from "../i18n/translations";

type TranslationSet = typeof translations.en | typeof translations.es;

interface Props {
    t: TranslationSet;
}

const { t } = Astro.props;
---

<nav
    class="sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-zinc-100"
>
    <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
        <span class="font-bold text-xl tracking-tight">GOAL: PARTNER.</span>
        <a
            href={t.altLangUrl}
            class="text-sm font-medium px-3 py-1 rounded-full border border-zinc-200 hover:bg-zinc-50 transition-colors"
        >
            {t.altLangLabel}
        </a>
    </div>
</nav>

<header class="max-w-6xl mx-auto px-6 pt-10 pb-16 md:pt-16">
    <div
        class="relative w-full max-w-5xl mx-auto aspect-[4/5] md:aspect-[21/9] bg-zinc-100 rounded-[2.5rem] md:rounded-[3rem] overflow-hidden border border-zinc-200 shadow-2xl group transition-all duration-500"
    >
        <picture>
            <source media="(min-width: 768px)" srcset="/escritorio.webp" />
            <img
                src="/movil.webp"
                alt={t.heroImgAlt}
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105"
            />
        </picture>

        <div
            class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent md:bg-gradient-to-r md:from-black/80 md:via-black/20 md:to-transparent"
        >
        </div>

        <div
            class="absolute inset-0 flex flex-col items-center justify-end pb-12 px-8 md:justify-center md:items-start md:p-16 text-center md:text-left text-white animate-fade-in-up"
        >
            <h1
                class="text-4xl md:text-7xl lg:text-8xl font-black tracking-tighter max-w-2xl mb-6 md:mb-8 leading-[0.9] md:leading-[0.85] text-balance"
            >
                {t.heroTitle}
            </h1>
            <a
                href="#paradox"
                class="group inline-flex items-center gap-2 text-lg font-bold underline underline-offset-8 decoration-1 text-white hover:text-zinc-300 transition-all"
            >
                <span>{t.heroLink}</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5 transition-transform group-hover:translate-y-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 9l-7 7-7-7"></path>
                </svg>
            </a>
        </div>
    </div>
</header>

<section id="paradox" class="py-24 bg-black text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-5xl font-bold tracking-tight mb-8">
            {t.paradoxTitle}
        </h2>
        <p
            class="text-lg md:text-xl text-zinc-400 leading-relaxed text-balance"
        >
            {t.paradoxText}
        </p>
    </div>
</section>

<section class="py-24 bg-black text-white">
    <div class="max-w-7xl mx-auto px-6">
        <h3
            class="text-3xl md:text-5xl font-black tracking-tighter mb-16 text-center text-white text-balance"
        >
            {t.drawbacksTitle}
        </h3>

        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6"
        >
            <article
                class="flex flex-col items-center text-center p-8 rounded-[2.5rem] bg-zinc-900/40 border border-zinc-800/50 hover:bg-zinc-900/60 transition-all duration-500 group"
            >
                <div
                    class="w-20 h-20 mb-8 rounded-3xl bg-zinc-900 flex items-center justify-center border border-zinc-800 group-hover:scale-110 transition-transform duration-500 shadow-xl"
                >
                    <i class="fa-solid fa-ban text-3xl text-white"></i>
                </div>
                <h4 class="text-xl font-bold mb-4 text-white">
                    {t.card1Title}
                </h4>
                <p class="text-zinc-400 text-sm leading-relaxed">
                    {t.card1Text}
                </p>
            </article>

            <article
                class="flex flex-col items-center text-center p-8 rounded-[2.5rem] bg-zinc-900/40 border border-zinc-800/50 hover:bg-zinc-900/60 transition-all duration-500 group"
            >
                <div
                    class="w-20 h-20 mb-8 rounded-3xl bg-zinc-900 flex items-center justify-center border border-zinc-800 group-hover:scale-110 transition-transform duration-500 shadow-xl"
                >
                    <i class="fa-solid fa-book-skull text-3xl text-white"></i>
                </div>
                <h4 class="text-xl font-bold mb-4 text-white">
                    {t.card2Title}
                </h4>
                <p class="text-zinc-400 text-sm leading-relaxed">
                    {t.card2Text}
                </p>
            </article>

            <article
                class="flex flex-col items-center text-center p-8 rounded-[2.5rem] bg-zinc-900/40 border border-zinc-800/50 hover:bg-zinc-900/60 transition-all duration-500 group"
            >
                <div
                    class="w-20 h-20 mb-8 rounded-3xl bg-zinc-900 flex items-center justify-center border border-zinc-800 group-hover:scale-110 transition-transform duration-500 shadow-xl"
                >
                    <i class="fa-solid fa-gamepad text-3xl text-white"></i>
                </div>
                <h4 class="text-xl font-bold mb-4 text-white">
                    {t.card3Title}
                </h4>
                <p class="text-zinc-400 text-sm leading-relaxed">
                    {t.card3Text}
                </p>
            </article>

            <article
                class="flex flex-col items-center text-center p-8 rounded-[2.5rem] bg-zinc-900/40 border border-zinc-800/50 hover:bg-zinc-900/60 transition-all duration-500 group"
            >
                <div
                    class="w-20 h-20 mb-8 rounded-3xl bg-zinc-900 flex items-center justify-center border border-zinc-800 group-hover:scale-110 transition-transform duration-500 shadow-xl"
                >
                    <i class="fa-solid fa-eye-slash text-3xl text-white"></i>
                </div>
                <h4 class="text-xl font-bold mb-4 text-white">
                    {t.card4Title}
                </h4>
                <p class="text-zinc-400 text-sm leading-relaxed">
                    {t.card4Text}
                </p>
            </article>
        </div>
    </div>
</section>

<section class="py-24 bg-zinc-50 text-zinc-900 border-y border-zinc-200">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <div
            class="w-24 h-24 mx-auto bg-zinc-200 rounded-full mb-8 overflow-hidden border border-zinc-300"
        >
            <img src="/manos.webp" alt="" class="w-full h-full object-cover" />
        </div>
        <p
            class="text-xl md:text-3xl font-medium leading-relaxed text-balance text-zinc-700"
        >
            {t.altText}
        </p>
    </div>
</section>

<section class="py-24 max-w-6xl mx-auto px-6">
    <h2 class="text-3xl md:text-5xl font-bold tracking-tight mb-16 text-center">
        {t.diffTitle}
    </h2>

    <div class="space-y-24">
        <div class="flex flex-col md:flex-row gap-12 items-center">
            <div
                class="w-full md:w-1/2 aspect-square bg-zinc-100 rounded-3xl overflow-hidden border border-zinc-200"
            >
                <img
                    src="/libre.webp"
                    alt={t.diff1ImgAlt}
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-bold mb-4">{t.diff1Title}</h3>
                <p class="text-zinc-600 text-lg leading-relaxed">
                    {t.diff1Text}
                </p>
            </div>
        </div>

        <div class="flex flex-col md:flex-row-reverse gap-12 items-center">
            <div
                class="w-full md:w-1/2 aspect-square bg-zinc-100 rounded-3xl overflow-hidden border border-zinc-200"
            >
                <img
                    src="/transparencia.webp"
                    alt={t.diff2ImgAlt}
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-bold mb-4">{t.diff2Title}</h3>
                <p class="text-zinc-600 text-lg leading-relaxed mb-6">
                    {t.diff2Text}
                </p>
                <button
                    onclick="document.getElementById('modal-compatibilidad').showModal()"
                    class="text-sm font-bold underline underline-offset-4 hover:text-zinc-600 cursor-pointer"
                >
                    {t.diff2Btn}
                </button>
            </div>
        </div>

        <div class="flex flex-col md:flex-row gap-12 items-center">
            <div
                class="w-full md:w-1/2 aspect-square bg-zinc-100 rounded-3xl overflow-hidden border border-zinc-200"
            >
                <img
                    src="/tiempo.webp"
                    alt={t.diff3ImgAlt}
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-bold mb-4">{t.diff3Title}</h3>
                <p class="text-zinc-600 text-lg leading-relaxed">
                    {t.diff3Text}
                </p>
            </div>
        </div>

        <div class="flex flex-col md:flex-row-reverse gap-12 items-center">
            <div
                class="w-full md:w-1/2 aspect-square bg-zinc-100 rounded-3xl overflow-hidden border border-zinc-200"
            >
                <img
                    src="/se-tu-mismo.webp"
                    alt={t.diff4ImgAlt}
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="w-full md:w-1/2">
                <h3 class="text-2xl font-bold mb-4">{t.diff4Title}</h3>
                <p class="text-zinc-600 text-lg leading-relaxed">
                    {t.diff4Text}
                </p>
            </div>
        </div>
    </div>
</section>

<section class="py-24 bg-zinc-50 border-t border-zinc-200">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl md:text-5xl font-bold tracking-tight mb-12">
            {t.priceTitle}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div
                class="p-8 rounded-3xl bg-white border border-zinc-200 text-left opacity-60"
            >
                <span
                    class="text-sm font-bold tracking-wider text-zinc-500 uppercase"
                    >{t.priceLabel}
                </span>
                <div class="text-5xl font-bold mt-2 mb-4 line-through">50€</div>
                <p class="text-zinc-600">{t.priceText}</p>
            </div>

            <div
                class="p-8 rounded-3xl bg-zinc-900 text-white text-left shadow-2xl ring-1 ring-zinc-900"
            >
                <span
                    class="text-sm font-bold tracking-wider text-green-400 uppercase"
                    >{t.nowLabel}
                </span>
                <div class="text-5xl font-bold mt-2 mb-4">{t.nowPrice}</div>
                <p class="text-zinc-300">{t.nowText}</p>
            </div>
        </div>
    </div>
</section>

<section class="pb-24 pt-8 max-w-4xl mx-auto px-6 text-center">
    <button
        onclick="document.getElementById('modal-cta').showModal()"
        class="group relative inline-flex items-center justify-center px-12 py-5 font-bold text-white transition-all duration-300 bg-zinc-900 rounded-full hover:bg-zinc-800 hover:scale-105 active:scale-95 shadow-[0_20px_50px_rgba(0,0,0,0.15)] hover:shadow-[0_20px_50px_rgba(0,0,0,0.3)] cursor-pointer"
    >
        <span class="relative">{t.ctaBtn}</span>
        <svg
            class="w-5 h-5 ml-3 transition-transform duration-300 group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
    </button>
</section>

<footer class="py-16 bg-black border-t border-zinc-900 text-center">
    <a
        href="https://github.com/martinezharo/goal-partner"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-zinc-900 border border-zinc-800 hover:bg-zinc-800 transition-colors text-sm font-medium text-white shadow-lg"
    >
        <svg
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
        >
            <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
        </svg>
        <span>{t.footerBtn}</span>
    </a>
</footer>

<!-- Modal: Compatibilidad -->
<dialog
    id="modal-compatibilidad"
    class="m-auto w-full max-w-2xl rounded-3xl p-0 backdrop:bg-zinc-950/50 shadow-2xl border border-zinc-200"
>
    <div class="p-8 md:p-12 relative bg-white">
        <button
            onclick="this.closest('dialog').close()"
            class="absolute top-6 right-6 w-8 h-8 flex items-center justify-center rounded-full bg-zinc-100 hover:bg-zinc-200 transition-colors cursor-pointer"
        >
            ✕
        </button>
        <h3 class="text-2xl font-bold mb-6">{t.modalCompatTitle}</h3>
        <div
            class="space-y-4 text-zinc-600 leading-relaxed text-sm md:text-base"
        >
            <p>{t.modalCompatP1}</p>
            <p>{t.modalCompatP2}</p>
            <p>{t.modalCompatP3}</p>
        </div>
    </div>
</dialog>

<!-- Modal: CTA -->
<dialog
    id="modal-cta"
    class="m-auto w-full max-w-md rounded-3xl p-0 backdrop:bg-zinc-950/50 shadow-2xl border border-zinc-200"
>
    <div class="p-8 bg-white relative">
        <button
            onclick="this.closest('dialog').close()"
            class="absolute top-6 right-6 w-8 h-8 flex items-center justify-center rounded-full bg-zinc-100 hover:bg-zinc-200 transition-colors cursor-pointer"
        >
            ✕
        </button>
        <h3 class="text-2xl font-bold mb-6">{t.modalCtaTitle}</h3>
        <form id="waitlist-form" class="space-y-4">
            <div>
                <label class="block text-sm font-medium mb-1"
                    >{t.labelEmail}
                </label>
                <input
                    type="email"
                    name="email"
                    class="w-full px-4 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-black"
                    required
                />
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium mb-1"
                        >{t.labelAge}
                    </label>
                    <input
                        type="number"
                        name="age"
                        min="18"
                        class="w-full px-4 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-black"
                        required
                    />
                </div>
                <div>
                    <label class="block text-sm font-medium mb-1"
                        >{t.labelSex}
                    </label>
                    <select
                        name="sex"
                        class="w-full px-4 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-black bg-white"
                        required
                    >
                        <option value="m">{t.optMale}</option>
                        <option value="f">{t.optFemale}</option>
                        <option value="o">{t.optOther}</option>
                    </select>
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium mb-1"
                    >{t.labelComment}
                </label>
                <textarea
                    name="comment"
                    class="w-full px-4 py-3 rounded-xl border border-zinc-300 focus:outline-none focus:ring-2 focus:ring-black resize-none h-24"
                ></textarea>
            </div>
            <button
                type="submit"
                id="submit-form-btn"
                class="w-full bg-black text-white px-6 py-4 rounded-xl font-bold hover:bg-zinc-800 transition-colors mt-4 cursor-pointer disabled:opacity-50"
            >
                {t.submitBtn}
            </button>
        </form>
    </div>
</dialog>

<script>
    const form = document.getElementById("waitlist-form") as HTMLFormElement;
    const submitBtn = document.getElementById(
        "submit-form-btn"
    ) as HTMLButtonElement;
    const modalCta = document.getElementById("modal-cta") as HTMLDialogElement;

    if (form) {
        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData(form);
            const data = {
                email: formData.get("email"),
                age: formData.get("age"),
                sex: formData.get("sex"),
                comment: formData.get("comment"),
            };

            // Cambiar estado del botón
            const originalText = submitBtn.innerText;
            submitBtn.disabled = true;
            submitBtn.innerText = "...";

            try {
                const response = await fetch("/api/join", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    alert("¡Gracias! Te avisaremos pronto.");
                    form.reset();
                    modalCta.close();
                } else {
                    alert("Hubo un error. Inténtalo de nuevo.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("No se pudo conectar con el servidor.");
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerText = originalText;
            }
        });
    }
</script>
